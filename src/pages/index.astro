      {
        url: 'https://ik.imagekit.io/oy5bt2urx/Wally-Vac-Truck.webp',
        width: 800,
        height: 600,
        alt: 'Hydrovac truck',
        type: 'image/webp',
      },
    ],
    site_name: 'WallyVac | Alberta Hydrovac Company',
  }}
  />
<Layout title="WallyVac | Alberta Hydrovac Company">
  <Hero />
  <Services />
  <About />
  <Gallery />
  <Logos />
