import About from "../components/sections/About.astro";
import ContactInfo from "../components/sections/Contact.astro";
import Gallery from "../components/sections/Gallery.astro";
import Hero from "../components/sections/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Logos from "../components/sections/Logos.astro";
import Services from "../components/sections/Services.astro";
---

<AstroSeo
  title="WallyVac | Alberta Hydrovac Company"
  description="Based in Edmonton, Alberta, Wally Vac specializes in state-of-the-art hydrovac services, utilizing advanced technology and expert knowledge. We deliver precise, efficient, and reliable hydrovac solutions to meet all your needs."
  openGraph={{
    url: 'https://wallyvac.ca/',
    title: 'WallyVac | Alberta Hydrovac Company',
    description: 'Based in Edmonton, Alberta, Wally Vac specializes in state-of-the-art hydrovac services, utilizing advanced technology and expert knowledge. We deliver precise, efficient, and reliable hydrovac solutions to meet all your needs.',
