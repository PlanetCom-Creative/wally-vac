---
import { AstroSeo } from "@astrolib/seo";
import AboutSection from '../components/sections/AboutSection.astro';
import Contact from '../components/sections/Contact.astro';
import FAQ from '../components/sections/FAQ.astro';
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/sections/PageHeader.astro';

---
<AstroSeo
  title="About | WallyVac | Alberta Hydrovac Company"
  description="At WallyVac, we pride ourselves on delivering exceptional hydrovac services with a focus on excellence and innovation. Our team of highly skilled operators and state-of-the-art equipment are equipped to efficiently handle projects of any size. Whether it’s a complex excavation or a straightforward task, our commitment to quality ensures outstanding results tailored to your needs."
  openGraph={{
    url: 'https://wallyvac.ca/',
    title: 'About | WallyVac | Alberta Hydrovac Company',
    description: 'At WallyVac, we pride ourselves on delivering exceptional hydrovac services with a focus on excellence and innovation. Our team of highly skilled operators and state-of-the-art equipment are equipped to efficiently handle projects of any size. Whether it’s a complex excavation or a straightforward task, our commitment to quality ensures outstanding results tailored to your needs.',
    images: [
      {
        url: 'https://ik.imagekit.io/oy5bt2urx/Wally-Vac-Truck.webp',
        width: 800,
        height: 600,
        alt: 'Hydrovac truck',
        type: 'image/webp',
      },
    ],
    site_name: 'WallyVac | Alberta Hydrovac Company',
  }}
  />

<Layout>
    <PageHeader title="About"/>
    <AboutSection/>
    <FAQ/>
    <Contact/>
</Layout>
